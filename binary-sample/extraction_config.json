{
  "extraction_config": {
    "output_directory": "binaries",
    "temp_directory": "temp_extraction",
    "log_level": "INFO",
    "max_concurrent_extractions": 4,
    "cleanup_temp": true
  },
  "targets": [
    {
      "image": "alpine:3.19",
      "label": "alpine3.19",
      "description": "Alpine Linux 3.19 - minimal security-focused",
      "platforms": ["linux/amd64", "linux/arm64", "linux/arm/v7"],
      "paths": [
        "/usr/bin/**/*",
        "/bin/**/*", 
        "/sbin/**/*",
        "/usr/sbin/**/*",
        "/usr/local/bin/**/*",
        "/usr/local/sbin/**/*"
      ],
      "include_patterns": ["*"],
      "exclude_patterns": ["*.txt", "*.conf", "*.md", "*.1", "*.8"]
    },
